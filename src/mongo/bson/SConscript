# -*- mode: python; -*-

Import("env")

env = env.Clone()

env.SConscript(
    must_exist=1,
    dirs=[
        "column",
        "mutable",
        "util",
    ],
    exports=[
        "env",
    ],
)

env.CppUnitTest(
    target="bson_test",
    source=[],
    LIBDEPS=[],
)

env.Benchmark(
    target="bson_bm",
    source=[],
    BAZEL_BENCHMARK_TAG="first_half_bm",
)

env.CppLibfuzzerTest(
    target="bson_validate_fuzzer",
    source=[],
)

env.CppIntegrationTest(
    target="bson_integration_test",
    source=[],
)
