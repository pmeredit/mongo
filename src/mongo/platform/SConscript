# -*- mode: python -*-

Import(
    [
        "env",
        "get_option",
    ]
)

env = env.Clone()
env.CppUnitTest(
    target="platform_test",
    source=[
        "atomic_proxy_test.cpp",
        "atomic_test.cpp",
        "bits_test.cpp",
        "endian_test.cpp",
        "int128_test.cpp",
        "process_id_test.cpp",
        "random_test.cpp",
        "source_location_test.cpp",
        "stack_locator_test.cpp",
        "decimal128_test.cpp",
        "decimal128_bson_test.cpp",
        "overflow_arithmetic_test.cpp",
        "waitable_atomic_test.cpp",
    ],
    PROVE_ALIASES=["server-programmability"],
)

env.Benchmark(
    target="endian_bm",
    source=[
        "endian_bm.cpp",
    ],
    LIBDEPS=[],
    CONSOLIDATED_TARGET="first_half_bm",
)

if get_option("link-model") == "dynamic":
    visibility_test1 = env.CppUnitTest(
        target="visibility1_test",
        source=[],
        LIBDEPS=[],
    )

    visibility_test2 = env.CppUnitTest(
        target="visibility2_test",
        source=[
            "visibility_test2.cpp",
        ],
        LIBDEPS=[
            "visibility_test_lib2",
        ],
        PROVE_ALIASES=["server-programmability"],
    )

env.CppUnitTest(
    target="rwmutex_test",
    source=[
        "rwmutex_test.cpp",
    ],
    LIBDEPS=[
        "$BUILD_DIR/mongo/base",
    ],
    PROVE_ALIASES=["server-programmability"],
)

env.Benchmark(
    target="rwmutex_bm",
    source=[
        "rwmutex_bm.cpp",
    ],
    LIBDEPS=[
        "$BUILD_DIR/mongo/base",
        "$BUILD_DIR/mongo/db/concurrency/lock_manager",
        "$BUILD_DIR/mongo/db/service_context_non_d",
        "$BUILD_DIR/mongo/util/processinfo",
    ],
)
