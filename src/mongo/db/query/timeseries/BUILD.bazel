load("//bazel:mongo_src_rules.bzl", "mongo_cc_library", "mongo_cc_unit_test")

package(default_visibility = ["//visibility:public"])

exports_files(
    glob([
        "*.h",
        "*.cpp",
    ]),
)

mongo_cc_library(
    name = "timeseries_rewrites",
    srcs = [
        "timeseries_rewrites.cpp",
    ],
    hdrs = [
        "timeseries_rewrites.h",
    ],
    deps = [
        "//src/mongo/db/pipeline",
        "//src/mongo/db/timeseries:timeseries_options",
        "//src/mongo/s:common_s",
    ],
)

mongo_cc_library(
    name = "timeseries_rewrites_mocks",
    hdrs = [
        "timeseries_rewrites_mocks.h",
    ],
)

mongo_cc_unit_test(
    name = "db_query_timeseries_test",
    srcs = [
        "timeseries_rewrites_test.cpp",
    ],
    tags = ["mongo_unittest_third_group"],
    deps = [
        ":timeseries_rewrites",
        ":timeseries_rewrites_mocks",
    ],
)
