Import("env")

env = env.Clone()

if env.TargetOSIs('windows'):
    # C4996: '': was declared deprecated
    env.Append(CCFLAGS=['/wd4996'])

env.Library(
    target= 'sqlite',
    source= [
        'sqlite3.c'
        ],
    LIBDEPS_DEPENDENTS= [
        '$BUILD_DIR/mongo/db/serveronly'
        ]
    )
