        "mongodb_process_interface.cpp",
        "operator.cpp",
        "operator_dag.cpp",
        "output_sampler.cpp",
        "pipeline_rewriter.cpp",
        "planner.cpp",
        "queued_sink_operator.cpp",
        "redact_operator.cpp",
        "sample_data_source_operator.cpp",
        "single_document_transformation_operator.cpp",
        "sink_operator.cpp",
