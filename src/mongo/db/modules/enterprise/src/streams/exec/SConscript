# -*- mode: python -*-

Import('env')

env = env.Clone()

env.Library(
    target='streams_document_source_feeder',
    source=[
        'document_source_feeder.cpp',
    ],
    LIBDEPS=['$BUILD_DIR/mongo/base', '$BUILD_DIR/mongo/db/query_exec'],
)

env.Library(
    target='streams_operators',
    source=[
        'operator.cpp',
        'in_memory_source_sink_operator.cpp',
    ],
    LIBDEPS=['$BUILD_DIR/mongo/base', '$BUILD_DIR/mongo/db/query_exec'],
)

