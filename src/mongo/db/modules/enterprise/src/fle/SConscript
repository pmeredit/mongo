# -*- mode: python -*-

Import("env")

env = env.Clone()

env.SConscript(
    must_exist=1,
    dirs=[
        "lib",
        "query_analysis",
        "shell",
    ],
    exports=[
        "env",
    ],
)

env.BazelProgram(
    target="mongocryptd",
    source=[],
    AIB_COMPONENT="mongocryptd",
    AIB_COMPONENTS_EXTRA=[
        "dist",
        "dist-test",
        "tools",
    ],
)
