Import("env")

env = env.Clone()

env.InjectThirdParty(libraries=['wiredtiger'])

env.Library(
    target='queryable_wt',
    source=[
        'blockstore_fs.cpp',
        'queryable_wt_init.cpp',
        'queryable_global_options.cpp',
    ],
    PROGDEPS_DEPENDENTS=[
        '$BUILD_DIR/mongo/mongod',
    ],
    LIBDEPS=[
        '$BUILD_DIR/mongo/db/service_context',
        '$BUILD_DIR/mongo/db/storage/kv/kv_storage_engine',
        '$BUILD_DIR/mongo/db/storage/storage_engine_common',
        '$BUILD_DIR/mongo/db/storage/storage_engine_metadata',
        '$BUILD_DIR/mongo/db/storage/wiredtiger/storage_wiredtiger',
        '$BUILD_DIR/mongo/db/storage/wiredtiger/storage_wiredtiger_core',
        '../blockstore/blockstore',
    ],
)
