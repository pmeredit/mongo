Import('env')

env = env.Clone()

env.Library(
    target='blockstore',
    source=[
        'windows_http_client.cpp' if env.TargetOSIs('windows') else 'curl_http_client.cpp',
        'http_client.cpp',
        'list_dir.cpp',
        'reader.cpp',
    ],
    LIBDEPS=[
        '$BUILD_DIR/mongo/base',
        '$BUILD_DIR/mongo/bson/util/bson_extract',
    ],
    SYSLIBDEPS=[
        'wininet' if env.TargetOSIs('windows') else 'curl',
    ],
)

env.CppIntegrationTest(
    target='list_dir_test',
    source=[
        'list_dir_test.cpp',
    ],
    LIBDEPS=[
        'blockstore',
    ],
)
