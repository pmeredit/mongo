#-*- python -*-

Import("env")
Import("wiredtiger")

env = env.Clone()

if not wiredtiger:
    env.FatalError("The InMemory storage engine requires WiredTiger")

wtEnv = env.Clone()
wtEnv.InjectThirdPartyIncludePaths(libraries=['wiredtiger'])
wtEnv.Library(
    target='storage_inmemory',
    source=[
        'inmemory_global_options.cpp',
        'inmemory_init.cpp',
        'inmemory_options_init.cpp',
    ],
    LIBDEPS_DEPENDENTS=['$BUILD_DIR/mongo/db/serveronly'],
    LIBDEPS=[
        '$BUILD_DIR/mongo/db/storage/wiredtiger/storage_wiredtiger',
        '$BUILD_DIR/mongo/db/storage/wiredtiger/storage_wiredtiger_core',
        '$BUILD_DIR/mongo/db/storage/kv/kv_engine',
        '$BUILD_DIR/mongo/db/storage/storage_engine_lock_file',
        '$BUILD_DIR/mongo/db/storage/storage_engine_metadata',
    ],
    LIBDEPS_PRIVATE=[
        '$BUILD_DIR/mongo/db/storage/storage_engine_common',
    ],
)
